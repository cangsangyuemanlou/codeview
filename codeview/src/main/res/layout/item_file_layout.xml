<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="#FFFFFF"
    android:padding="8dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/folder" />

    <TextView
        android:id="@+id/item_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/item_image_view"
        android:layout_toRightOf="@id/item_image_view"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:maxLines="1"
        android:ellipsize="middle"
        android:textSize="16sp"
        android:text="file.name" />

    <TextView
        android:id="@+id/item_file_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_image_view"
        android:layout_toEndOf="@id/item_image_view"
        android:layout_alignBottom="@id/item_image_view"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="12sp"
        android:text="yyyy-MM-dd HH:mm"/>


</RelativeLayout>